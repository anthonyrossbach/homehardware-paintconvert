s.echo("This is a simple paint converter for the old AX MX and R colourants to the new AH MH and RH.<BR><BR>Enter the values as needed and it will convert it for you.")

if uv.submitx=="yes"
	s.echo("<BR><BR>We have your values, let's convert!")
	//convert to shots, we will convert ounces out after when showing to the user.
	v.newah=0
	v.newmh=0
	v.newrh=0
	
	//AX is simple, to convert is a pure half tint ammount, but we will also convert to shots!
	if set uv.axounce
		v.add=uv.axounce
		v.add/2
		v.add*48
		v.newah+v.add
	end
	if set uv.axshot
		v.add=uv.axshot
		v.add/2
		v.newah+v.add
	end
	if set uv.axhalfshot
		v.add=0.25
		v.newah+v.add
	end
	if set uv.axquartershot
		v.add=0
		v.newah+v.add
	end
	
	//Converted show user
	s.echo("<div style='padding:10px;'><text style='color:orange;padding-right:10px;'>AH: </text>v.newah</div>")
	s.echo("<div style='padding:10px;'><text style='color:purple;padding-right:10px;'>MH: </text>v.newmh</div>")
	s.echo("<div style='padding:10px;'><text style='color:red;padding-right:10px;'>RH: </text>v.newrh</div>")
	
end

s.echo("<BR><BR><form>")

